@model RecursosHumanos.Models.ViewModels.ReclutamientoDetailsVM



<div class="reclutamiento-overlay reclutamiento-overlay-details" style="display:flex">
    <div class="reclutamiento-modal">

        <div class="modal-header">
            <h5><i class="bi bi-eye"></i> Detalles del candidato</h5>
            <button type="button" class="btn-close" onclick="ReclutamientoOverlayDetails.close()"></button>
        </div>

        <div class="modal-body">
            <dl class="row">

                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Model.Datos.NombreCompleto</dd>

                <dt class="col-sm-4">Teléfono</dt>
                <dd class="col-sm-8">@Model.Datos.Telefono</dd>

                <dt class="col-sm-4">Empresa</dt>
                <dd class="col-sm-8">@Model.Datos.IdEmpresaNavigation?.Empresa1</dd>

                <dt class="col-sm-4">Base</dt>
                <dd class="col-sm-8">@Model.Datos.IdBaseNavigation?.Base1</dd>

                <dt class="col-sm-4">Estatus</dt>
                <dd class="col-sm-8">@Model.Datos.IdEstatusNavigation?.Estatus1</dd>

                <dt class="col-sm-4">Fuente</dt>
                <dd class="col-sm-8">@Model.Datos.IdFuenteNavigation?.Fuente1</dd>

                <dt class="col-sm-4">Posición</dt>
                <dd class="col-sm-8">@Model.Datos.IdPosicionNavigation?.Posicion1</dd>

                <dt class="col-sm-4">Reclutador</dt>
                <dd class="col-sm-8">@Model.Datos.IdReclutadorNavigation?.NombreCompleto</dd>

                <dt class="col-sm-4">Sexo</dt>
                <dd class="col-sm-8">@Model.Datos.IdSexoNavigation?.Sexo1</dd>

                <dt class="col-sm-4">Fecha contacto</dt>
                <dd class="col-sm-8">@Model.Datos.FechaContacto.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Comentarios</dt>
                <dd class="col-sm-8">@Model.Datos.Comentarios</dd>

            </dl>
        </div>

        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="ReclutamientoOverlayDetails.close()">
                Cerrar
            </button>
        </div>

    </div>
</div>







 