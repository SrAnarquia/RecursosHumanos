@using RecursosHumanos.Models.ViewModels.Reclutamiento
@model ReclutamientoDetailsVM

<div class="reclutamiento-overlay-details">
    <div class="alertas-modal">

        <!-- Encabezado del modal -->
        <div class="modal-header">
            <h5><i class="bi bi-eye"></i> Detalles del personal</h5>
            <button type="button"
                    class="btn-close"
                    onclick="ReclutamientoOverlayDetails.close()"></button>
        </div>

        <!-- Cuerpo del modal -->
        <div class="modal-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Datos.NombreCompleto</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@Model.Datos.Telefono</dd>

                <dt class="col-sm-3">Empresa:</dt>
                <dd class="col-sm-9">@Model.Datos.IdEmpresaNavigation?.Empresa1</dd>

                <dt class="col-sm-3">Base:</dt>
                <dd class="col-sm-9">@Model.Datos.IdBaseNavigation?.Base1</dd>

                <dt class="col-sm-3">Fuente:</dt>
                <dd class="col-sm-9">@Model.Datos.IdFuenteNavigation?.Fuente1</dd>

                <dt class="col-sm-3">Estatus:</dt>
                <dd class="col-sm-9">@Model.Datos.IdEstatusNavigation?.Estatus1</dd>

                <dt class="col-sm-3">Posición:</dt>
                <dd class="col-sm-9">@Model.Datos.IdPosicionNavigation?.Posicion1</dd>

                <dt class="col-sm-3">Reclutador:</dt>
                <dd class="col-sm-9">@Model.Datos.IdReclutadorNavigation?.NombreCompleto</dd>

                <dt class="col-sm-3">Sexo:</dt>
                <dd class="col-sm-9">@Model.Datos.IdSexoNavigation?.Sexo1</dd>

                <dt class="col-sm-3">Fecha de Contacto:</dt>
                <dd class="col-sm-9">@Model.Datos.FechaContacto.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>

        <!-- Pie del modal -->
        <div class="modal-footer">
            <button class="btn btn-secondary"
                    onclick="ReclutamientoOverlayDetails.close()">
                Cerrar
            </button>
        </div>

    </div>
</div>

